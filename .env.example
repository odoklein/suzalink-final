# =============================================
# SUZALINK - ENVIRONMENT VARIABLES
# Copy this to .env and fill in your values
# =============================================

# =============================================
# DATABASE
# =============================================
DATABASE_URL="postgresql://..."
DIRECT_URL="postgresql://..."

# =============================================
# AUTHENTICATION
# =============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# =============================================
# FILE STORAGE (Phase 4.1 - AWS S3)
# =============================================
# Leave empty to use local storage in development
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# =============================================
# EMAIL INTEGRATION (Phase 4.2)
# =============================================
# Gmail API
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:3000/api/email/oauth/gmail/callback

# Microsoft Graph (Outlook)
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=
OUTLOOK_REDIRECT_URI=http://localhost:3000/api/email/oauth/outlook/callback

# =============================================
# GOOGLE DRIVE INTEGRATION (Phase 4.1)
# =============================================
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/integrations/google-drive/callback

# =============================================
# ENCRYPTION (Phase 4)
# =============================================
ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================
# QUEUE CONFIGURATION
# =============================================
# Cooldown periods (in hours)
COOLDOWN_CALL=24
COOLDOWN_EMAIL=72
COOLDOWN_LINKEDIN=168

# Maximum retry attempts for NO_RESPONSE
MAX_RETRIES=3

# =============================================
# API CONFIGURATION
# =============================================
# Rate limiting
RATE_LIMIT_MAX=100

# API timeout (milliseconds)
API_TIMEOUT=30000

# =============================================
# CACHE (Optional - Redis)
# =============================================
# REDIS_URL="redis://localhost:6379"

# =============================================
# NOTIFICATIONS (Optional)
# =============================================
# Email (SendGrid)
# SENDGRID_API_KEY="your-sendgrid-key"
# EMAIL_FROM="noreply@suzalink.com"

# Slack
# SLACK_WEBHOOK_URL="https://hooks.slack.com/..."

# =============================================
# SECURITY
# =============================================
# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000"

# =============================================
# FEATURE FLAGS
# =============================================
FEATURE_REALTIME=false
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=false
FEATURE_CSV_IMPORT=true
FEATURE_AUDIT_LOG=false

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=info
# LOG_FILE=/var/log/suzalink.log

# =============================================
# ENVIRONMENT
# =============================================
NODE_ENV=development
